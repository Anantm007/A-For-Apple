<%-include('partials/header_notlogin')-%>

<div class="container" id="login-form">
  <div class="row">
    <div class="col-lg-6">
      <h2 style="margin-left: 15px;">Login</h2><br>
      <form class="" action="/login_ngo" method="post">
        <input type="text" class="form-control" name="username" value="" placeholder="username" autofocus="on"><br>
        <input type="password" name="password" class="form-control" value="" placeholder="password"><br>
        <button type="submit" name="button" class="btn btn-outline-warning">Login</button>
      </form>
    </div>
    <div class="col-lg-6">
      <h2 style="margin-left: 20px;">SignUp</h2><br>
      <form class="" action="/signup_ngo" method="post">
        <input class="form-control" type="text" name="name" value="" placeholder="Name of NGO"><br>
        <input class="form-control" type="text" name="username" value="" placeholder="Enter a username"><br>
        <input class="form-control" type="password" name="password" value="" placeholder="Enter password"><br>
        <input class="form-control" type="text" name="location" value="" placeholder="Enter location"><br>
        <input class="form-control" type="text" name="volunteers" value="" placeholder="Current No. of volunteers"><br>
        <button type="submit" name="button" class="btn btn-outline-warning">SignUp</button>
      </form>
    </div>
  </div>
</div>
  </body>
</html>
