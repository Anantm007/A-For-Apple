<%-include('partials/header_login.ejs')-%>
<div id="login-form">
  <h2 id="listngoheading" > <b>NGOs Activity</b></h2>
<p id="listngoheading" >This section shows the activity of NGOs, i.e., the number of times NGO has used the App to teach students. If you feel an NGO require more help to conduct more sessions, feel free to reach out to them as volunteers.</p><br>
  <div class="row">
    <div class="col-lg-8">

      <div class="activityGraph">
        <canvas id="myChart" width="20" height="20"></canvas>
      </div>
    </div>

  </div>

</div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.js"></script>
<script>
var ctx = document.getElementById('myChart').getContext('2d');
var myChart = new Chart(ctx, {
    type: 'bar',
    data: {
        labels: ["<%=ngos[0].name%>", "<%=ngos[1].name%>", "<%=ngos[2].name%>", "<%=ngos[3].name%>", "<%=ngos[4].name%>", "<%=ngos[5].name%>"],
        datasets: [{
            label: '# of Votes',
            data: [<%=ngos[0].timesUsed%>, <%=ngos[1].timesUsed%>,<%=ngos[2].timesUsed%>, <%=ngos[3].timesUsed%>,<%=ngos[4].timesUsed%>, <%=ngos[5].timesUsed%>],
            backgroundColor: [
                'rgba(255, 99, 132, 0.2)',
                'rgba(54, 162, 235, 0.2)',
                'rgba(255, 206, 86, 0.2)',
                'rgba(75, 192, 192, 0.2)',
                'rgba(153, 102, 255, 0.2)',
                'rgba(255, 159, 64, 0.2)'
            ],
            borderColor: [
                'rgba(255, 99, 132, 1)',
                'rgba(54, 162, 235, 1)',
                'rgba(255, 206, 86, 1)',
                'rgba(75, 192, 192, 1)',
                'rgba(153, 102, 255, 1)',
                'rgba(255, 159, 64, 1)'
            ],
            borderWidth: 1
        }]
    },
    options: {
        scales: {
            yAxes: [{
                ticks: {
                    beginAtZero: true
                }
            }]
        }
    }
});
</script>
  </body>
</html>
